{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "storybook/.storybook/**"],
      "env": ["NODE_ENV"]
    },
    "deploy": {
      "dependsOn": ["build", "lint"]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build-storybook": {
      "dependsOn": ["^build"],
      "outputs": [".storybook-static/**"]
    }
  }
}
